{
  "name": "Paku IoT Dev",
  "build": {
    "dockerfile": "Dockerfile"
  },
  "remoteUser": "vscode",
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-python.vscode-pylance",
        "GitHub.copilot",
        "ms-azuretools.vscode-docker"
      ]
    }
  },
  "mounts": [
    "source=/var/run/docker.sock,target=/var/run/docker.sock,type=bind"
  ],
#  "features": {
#    "ghcr.io/devcontainers/features/docker-in-docker:2": {}
#  },
  "forwardPorts": [3000, 9090, 9091, 9101],
  "postCreateCommand": "pip install -r ecoflow-monitor/requirements.txt || true"
}
